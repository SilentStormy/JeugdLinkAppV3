@page
@model JeugLinkApp.Pages.RegisterModel
@{
    ViewData["Title"] = "Registreer";
}
<div class="container mt-4">
    <h1 class="text-center mb-4" style="color: #343a40;">Meld je aan en begin met leren</h1>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form method="post" class="p-4" style="border: 1px solid #ddd; border-radius: 8px; max-width: 500px; margin: 0 auto;">
        <div class="form-group mb-3">
            <label for="Voornaam" class="form-label">Voornaam</label>
            <input type="text" id="Voornaam" name="newuser.firstname" class="form-control" placeholder="Vul je voornaam in" required />
        </div>
        <div class="form-group mb-3">
            <label for="Achternaam" class="form-label">Achternaam</label>
            <input type="text" id="Achternaam" name="newuser.lastname" class="form-control" placeholder="Vul je achternaam in" required />
        </div>
        <div class="form-group mb-3">
            <label for="Email" class="form-label">E-mail</label>
            <input type="email" id="Email" name="newuser.email" class="form-control" placeholder="Vul je e-mailadres in" required />
        </div>
        <div class="form-group mb-3">
            <label for="Password" class="form-label">Wachtwoord</label>
            <input type="password" id="Password" name="newuser.password" class="form-control" placeholder="Maak een wachtwoord aan" required />
        </div>
         <button type="submit" class="btn" style="background-color: orange; color: white; width: 100%;">Registreer</button>
        <p class="mt-3 text-center">
            Door je te registreren ga je akkoord met onze <a href="/Gebruiksvoorwaarden">Gebruiksvoorwaarden</a> en <a href="/PrivacyBeleid">Privacybeleid</a>.
        </p>
        <p class="text-center">
            Heb je al een account? <a href="/Authentication/Login" style="color: orange;">Log in</a>.
        </p>
    </form>
</div>
