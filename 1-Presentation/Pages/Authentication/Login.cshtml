@page
@model JeugLinkApp.Pages.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="text-center">
        <h2>Inloggen</h2>
    </div>
    <form method="post" class="mt-4 mx-auto" style="max-width: 400px;">
        <div class="form-group">
            <label for="Email" class="form-label">Email</label>
            <input asp-for="Email" id="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-lg btn-warning w-100">
                <i class="fas fa-envelope"></i> Inloggen
            </button>
        </div>

               <div class="text-center mt-4">
            <p>Heb je geen account? <a href="/Authentication/Register" class="text-decoration-none text-warning">Registreren</a></p>
            
        </div>
    </form>
</div>
