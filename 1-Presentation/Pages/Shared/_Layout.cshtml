<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JeugLinkApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JeugLinkApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        
        .navbar {
            border-bottom: 1px solid #ddd;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .navbar .form-control {
            border-radius: 50px;
        }

        .navbar .btn {
            border-radius: 50px;
        }

        .navbar .btn-primary {
            background-color: orange;
            border-color: orange;
        }

            .navbar .btn-primary:hover {
                background-color: #e67e22;
                border-color: #e67e22;
            }

        .navbar .btn-outline-secondary:hover {
            background-color: #f7f7f7;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                
                <a class="navbar-brand" asp-area="" asp-page="/Index">JeugLinkApp</a>
                <a class="nav-link" href="#">Ontdekken</a>

                <form class="d-flex mx-auto w-50">
                    <div class="input-group">
                        <input type="search" class="form-control rounded-start border-0" placeholder="Zoek iets..." aria-label="Zoek" />
                        <span class="input-group-text bg-white border-0 rounded-end" id="search-icon">
                            <i class="bi bi-search"></i> <!-- Bootstrap Search Icon -->
                        </span>
                    </div>
                </form>



                <!-- Right-side Buttons -->
                <div class="d-flex align-items-center">
                    <a class="nav-link text-dark" href="#">Docent worden</a>
                    <a class="nav-link text-dark" href="#"><i class="bi bi-cart"></i></a> <!-- Replace with cart icon -->
                    <a class="btn btn-outline-secondary me-2" asp-area="" asp-page="/Authentication/Login">Inloggen</a>
                    <a class="btn btn-primary" asp-area="" asp-page="/Authentication/Register">Registreren</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white text-center py-4">
        <p>&copy; 2024 JeugdLinkApp. All Rights Reserved.</p>
        <p><a href="/PrivacyPolicy" class="text-white">Privacybeleid</a> | <a href="/Contact" class="text-white">Contact</a></p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
